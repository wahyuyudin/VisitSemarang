<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.visitsemarang.about"
    android:background="#FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon_image"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"

            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/vsa_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Semarang Apps"
                android:layout_centerHorizontal="true"


                />
            <TextView
                android:id="@+id/dev_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="developed by Yuyu Wahyudin"
                android:layout_below="@id/vsa_text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/year_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                android:layout_below="@+id/dev_text_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>




    </LinearLayout>

    <ImageView
        android:id="@+id/undip_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/undip"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/asj_image_view">
    </ImageView>

    <ImageView
        android:id="@+id/elins_image_view"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/elins"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/asj_image_view"
        >

    </ImageView>

    <ImageView
        android:id="@+id/asj_image_view"
        android:layout_width="83dp"
        android:layout_height="52dp"
        android:src="@drawable/iak"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        >

    </ImageView>


</RelativeLayout>





